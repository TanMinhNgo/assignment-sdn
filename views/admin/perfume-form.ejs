<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= perfume ? 'Edit' : 'Add' %> Perfume - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/admin/perfumes">Perfumes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/brands">Brands</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/members">Members</a></li>
                    <li class="nav-item"><a class="nav-link" href="/">Back to Site</a></li>
                    <li class="nav-item"><a class="nav-link" href="/auth/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/admin/perfumes">Perfumes</a></li>
                <li class="breadcrumb-item active"><%= perfume ? 'Edit' : 'Add New' %></li>
            </ol>
        </nav>

        <!-- Form -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0"><%= perfume ? 'Edit Perfume' : 'Add New Perfume' %></h2>
                    </div>
                    <div class="card-body">
                        <form action="<%= perfume ? `/admin/perfumes/${perfume._id}?_method=PUT` : '/admin/perfumes' %>" method="POST">
                            <div class="row">
                                <!-- Perfume Name -->
                                <div class="col-md-6 mb-3">
                                    <label for="perfumeName" class="form-label fw-bold">Perfume Name</label>
                                    <input 
                                        type="text" 
                                        id="perfumeName"
                                        name="perfumeName" 
                                        value="<%= perfume ? perfume.perfumeName : '' %>" 
                                        placeholder="Enter perfume name" 
                                        class="form-control" 
                                        required
                                    />
                                </div>

                                <!-- Brand -->
                                <div class="col-md-6 mb-3">
                                    <label for="brand" class="form-label fw-bold">Brand</label>
                                    <select name="brand" id="brand" class="form-select" required>
                                        <option value="">Select a brand</option>
                                        <% brands.forEach(b => { %>
                                            <option value="<%= b._id %>" <%= perfume && perfume.brand._id.toString() === b._id.toString() ? 'selected' : '' %>>
                                                <%= b.brandName %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>

                                <!-- Image URL -->
                                <div class="col-12 mb-3">
                                    <label for="uri" class="form-label fw-bold">Image URL</label>
                                    <input 
                                        type="url" 
                                        id="uri"
                                        name="uri" 
                                        value="<%= perfume ? perfume.uri : '' %>" 
                                        placeholder="https://example.com/image.jpg" 
                                        class="form-control" 
                                        required
                                    />
                                </div>

                                <!-- Price -->
                                <div class="col-md-4 mb-3">
                                    <label for="price" class="form-label fw-bold">Price ($)</label>
                                    <input 
                                        type="number" 
                                        id="price"
                                        name="price" 
                                        value="<%= perfume ? perfume.price : '' %>" 
                                        placeholder="99.99" 
                                        step="0.01"
                                        class="form-control" 
                                        required
                                    />
                                </div>

                                <!-- Concentration -->
                                <div class="col-md-4 mb-3">
                                    <label for="concentration" class="form-label fw-bold">Concentration</label>
                                    <select name="concentration" id="concentration" class="form-select" required>
                                        <option value="">Select concentration</option>
                                        <option value="Eau de Cologne" <%= perfume && perfume.concentration === 'Eau de Cologne' ? 'selected' : '' %>>Eau de Cologne</option>
                                        <option value="Eau de Toilette" <%= perfume && perfume.concentration === 'Eau de Toilette' ? 'selected' : '' %>>Eau de Toilette</option>
                                        <option value="Eau de Parfum" <%= perfume && perfume.concentration === 'Eau de Parfum' ? 'selected' : '' %>>Eau de Parfum</option>
                                        <option value="Extrait" <%= perfume && perfume.concentration === 'Extrait' ? 'selected' : '' %>>Extrait</option>
                                    </select>
                                </div>

                                <!-- Volume -->
                                <div class="col-md-4 mb-3">
                                    <label for="volume" class="form-label fw-bold">Volume (ml)</label>
                                    <input 
                                        type="number" 
                                        id="volume"
                                        name="volume" 
                                        value="<%= perfume ? perfume.volume : '' %>" 
                                        placeholder="50" 
                                        class="form-control" 
                                        required
                                    />
                                </div>

                                <!-- Target Audience -->
                                <div class="col-md-6 mb-3">
                                    <label for="targetAudience" class="form-label fw-bold">Target Audience</label>
                                    <select name="targetAudience" id="targetAudience" class="form-select" required>
                                        <option value="">Select target</option>
                                        <option value="Men" <%= perfume && perfume.targetAudience === 'Men' ? 'selected' : '' %>>Men</option>
                                        <option value="Women" <%= perfume && perfume.targetAudience === 'Women' ? 'selected' : '' %>>Women</option>
                                        <option value="Unisex" <%= perfume && perfume.targetAudience === 'Unisex' ? 'selected' : '' %>>Unisex</option>
                                    </select>
                                </div>

                                <!-- Ingredients -->
                                <div class="col-12 mb-3">
                                    <label for="ingredients" class="form-label fw-bold">Ingredients</label>
                                    <input 
                                        type="text" 
                                        id="ingredients"
                                        name="ingredients" 
                                        value="<%= perfume ? perfume.ingredients : '' %>" 
                                        placeholder="e.g., Bergamot, Jasmine, Vanilla" 
                                        class="form-control" 
                                        required
                                    />
                                </div>

                                <!-- Description -->
                                <div class="col-12 mb-3">
                                    <label for="description" class="form-label fw-bold">Description</label>
                                    <textarea 
                                        name="description" 
                                        id="description"
                                        rows="4" 
                                        placeholder="Enter perfume description" 
                                        class="form-control" 
                                        required
                                    ><%= perfume ? perfume.description : '' %></textarea>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex justify-content-end gap-2 mt-3">
                                <a href="/admin/perfumes" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">
                                    <%= perfume ? 'Update' : 'Create' %> Perfume
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz4YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>
