<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfume Management - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/admin/perfumes">Perfumes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/brands">Brands</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/members">Members</a></li>
                    <li class="nav-item"><a class="nav-link" href="/">Back to Site</a></li>
                    <li class="nav-item"><a class="nav-link" href="/auth/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Perfumes</li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Perfume Management</h1>
            <a href="/admin/perfumes/new" class="btn btn-primary">
                + Add New Perfume
            </a>
        </div>

        <!-- Table -->
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Brand</th>
                                <th>Price</th>
                                <th>Concentration</th>
                                <th>Target</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% perfumes.forEach(perfume => { %>
                                <tr>
                                    <td>
                                        <img src="<%= perfume.uri %>" alt="<%= perfume.perfumeName %>" 
                                             style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;"
                                             onerror="this.src='https://via.placeholder.com/50x50?text=No+Image'">
                                    </td>
                                    <td><%= perfume.perfumeName %></td>
                                    <td><%= perfume.brand.brandName %></td>
                                    <td>$<%= perfume.price %></td>
                                    <td>
                                        <% if (perfume.concentration === 'Extrait') { %>
                                            <span class="badge bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">âœ¨ Extrait</span>
                                        <% } else { %>
                                            <%= perfume.concentration %>
                                        <% } %>
                                    </td>
                                    <td><%= perfume.targetAudience %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/admin/perfumes/<%= perfume._id %>/edit" class="btn btn-info">Edit</a>
                                            <button onclick="deletePerfume('<%= perfume._id %>')" class="btn btn-danger">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz4YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script>
        async function deletePerfume(perfumeId) {
            if (confirm('Are you sure you want to delete this perfume? This action cannot be undone.')) {
                try {
                    const response = await fetch(`/admin/perfumes/${perfumeId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error deleting perfume');
                    }
                } catch (error) {
                    alert('Error deleting perfume: ' + error.message);
                }
            }
        }
    </script>
</body>
</html>
