<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">ðŸŒ¸ Perfume Collection</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <% if (user) { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/profile">Profile</a>
              </li>
              <% if (user.isAdmin) { %>
                <li class="nav-item">
                  <a class="btn btn-primary btn-sm ms-2" href="/admin/dashboard">Admin Panel</a>
                </li>
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/logout">Logout</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="btn btn-primary btn-sm ms-2" href="/auth/register">Register</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
      <!-- Hero Section -->
      <div class="p-5 mb-4 bg-gradient text-white rounded-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container-fluid py-5 text-center">
          <h1 class="display-4 fw-bold"><%= title %></h1>
          <p class="fs-4">Discover the finest fragrances from luxury brands</p>
        </div>
      </div>

      <!-- Search & Filter -->
      <div class="card shadow mb-4">
        <div class="card-body">
          <form method="GET" action="/" class="row g-3">
            <div class="col-md-5">
              <label for="searchInput" class="form-label fw-bold">Search Perfume</label>
              <input 
                type="text" 
                name="search" 
                id="searchInput"
                placeholder="Enter perfume name..." 
                value="<%= search %>" 
                class="form-control"
              />
            </div>
            
            <div class="col-md-4">
              <label for="brandSelect" class="form-label fw-bold">Filter by Brand</label>
              <select name="brand" id="brandSelect" class="form-select">
                <option value="">All Brands</option>
                <% brands.forEach(b => { %>
                  <option value="<%= b.brandName %>" <%= selectedBrand === b.brandName ? 'selected' : '' %>>
                    <%= b.brandName %>
                  </option>
                <% }); %>
              </select>
            </div>
            
            <div class="col-md-3 d-flex align-items-end gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
              </button>
              <a href="/" class="btn btn-outline-secondary">Clear</a>
            </div>
          </form>
        </div>
      </div>

      <!-- Results -->
      <% if (perfumes.length === 0) { %>
        <div class="alert alert-info" role="alert">
          <i class="bi bi-info-circle"></i> No perfumes found. Try a different search.
        </div>
      <% } else { %>
        <div class="mb-3">
          <h2 class="h4">Found <%= perfumes.length %> perfume(s)</h2>
        </div>

        <!-- Perfume Grid -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
          <% perfumes.forEach(perfume => { %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <img 
                  src="<%= perfume.uri %>" 
                  alt="<%= perfume.perfumeName %>" 
                  class="card-img-top"
                  style="height: 200px; object-fit: cover;"
                  onerror="this.src='https://via.placeholder.com/300x200?text=No+Image'"
                />
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">
                    <%= perfume.perfumeName %>
                    <% if (perfume.concentration === 'Extrait') { %>
                      <span class="badge bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">âœ¨ Extrait</span>
                    <% } %>
                  </h5>
                  
                  <div class="small mb-3">
                    <p class="mb-1"><strong>Brand:</strong> <%= perfume.brand.brandName %></p>
                    <p class="mb-1"><strong>Target:</strong> <%= perfume.targetAudience %></p>
                    <% if (perfume.concentration !== 'Extrait') { %>
                      <p class="mb-1"><strong>Type:</strong> <%= perfume.concentration %></p>
                    <% } %>
                  </div>

                  <div class="mt-auto d-flex justify-content-between align-items-center">
                    <span class="h4 mb-0 text-primary">$<%= perfume.price %></span>
                    <a href="/perfumes/<%= perfume._id %>" class="btn btn-primary btn-sm">
                      View Details â†’
                    </a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-4 mt-5">
      <div class="container">
        <p class="mb-0 fw-bold">Perfume Collection App</p>
        <p class="mb-0">Assignment SDN - FPT University</p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz4YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  </body>
</html>
