<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">üå∏ Perfume Collection</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <% if (user) { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/profile">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/auth/logout">Logout (<%= user.membername %>)</a>
              </li>
              <% if (user.isAdmin) { %>
                <li class="nav-item">
                  <span class="badge bg-warning text-dark ms-2 mt-2">‚òÖ Admin</span>
                </li>
              <% } %>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="btn btn-primary btn-sm ms-2" href="/auth/register">Register</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container my-4">
      <a href="/" class="btn btn-outline-secondary mb-3">&larr; Back to Collection</a>

      <!-- Perfume Details -->
      <div class="row mb-4">
        <div class="col-md-5">
          <img src="<%= perfume.uri %>" alt="<%= perfume.perfumeName %>" class="img-fluid rounded shadow" onerror="this.src='https://via.placeholder.com/400x400?text=No+Image'">
        </div>
        
        <div class="col-md-7">
          <h1 class="mb-3"><%= perfume.perfumeName %></h1>
          <p><strong>Brand:</strong> <%= perfume.brand.brandName %></p>
          <p><strong>Price:</strong> <span class="text-success fw-bold">$<%= perfume.price %></span></p>
          <p><strong>Target Audience:</strong> <%= perfume.targetAudience %></p>
          <p><strong>Volume:</strong> <%= perfume.volume %> ml</p>
          
          <% if (perfume.concentration === 'Extrait') { %>
            <div class="mb-3">
              <strong>Concentration:</strong>
              <div class="mt-2">
                <span class="badge text-white p-2 fs-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">‚ú® Extrait - Premium Quality</span>
              </div>
            </div>
          <% } else { %>
            <p><strong>Concentration:</strong> <%= perfume.concentration %></p>
          <% } %>
          
          <h3 class="mt-4">Description</h3>
          <p><%= perfume.description %></p>
          
          <h3 class="mt-4">Ingredients</h3>
          <p><%= perfume.ingredients %></p>
        </div>
      </div>

      </div>

      <!-- Comments Section -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title mb-4">Reviews & Ratings (<%= perfume.comments.length %>)</h2>
          
          <% if (user) { %>
            <% const userComment = perfume.comments.find(c => c.author._id.toString() === user._id.toString()); %>
            <% if (!userComment) { %>
              <div class="card bg-light mb-4">
                <div class="card-body">
                  <h3 class="h5 mb-3">Add Your Review</h3>
                  <form action="/perfumes/<%= perfume._id %>/comments" method="POST">
                    <div class="mb-3">
                      <label for="rating" class="form-label fw-bold">Rating (1-5 stars)</label>
                      <select name="rating" id="rating" class="form-select" required>
                        <option value="1">‚≠ê 1 Star</option>
                        <option value="2">‚≠ê‚≠ê 2 Stars</option>
                        <option value="3">‚≠ê‚≠ê‚≠ê 3 Stars</option>
                        <option value="4">‚≠ê‚≠ê‚≠ê‚≠ê 4 Stars</option>
                        <option value="5" selected>‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê 5 Stars</option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="content" class="form-label fw-bold">Comment</label>
                      <textarea name="content" id="content" class="form-control" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                  </form>
                </div>
              </div>
            <% } else { %>
              <div class="alert alert-warning mb-4">
                <p class="mb-0">You have already reviewed this perfume. You can edit or delete your review below.</p>
              </div>
            <% } %>
          <% } else { %>
            <p><a href="/auth/login" class="btn btn-primary">Login</a> to add your review.</p>
          <% } %>

          <% if (perfume.comments.length === 0) { %>
            <p class="text-muted">No reviews yet. Be the first to review!</p>
          <% } else { %>
            <% perfume.comments.forEach(comment => { %>
              <div class="card mb-3 border-start border-primary border-5">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                      <h5 class="card-title mb-1"><%= comment.author.membername %></h5>
                      <div class="text-warning mb-2">
                        <% for(let i = 0; i < comment.rating; i++) { %>‚≠ê<% } %>
                      </div>
                      <p class="card-text"><%= comment.content %></p>
                      <small class="text-muted"><%= new Date(comment.createdAt).toLocaleDateString() %></small>
                    </div>
                    
                    <% if (user && comment.author._id.toString() === user._id.toString()) { %>
                      <div class="ms-3">
                        <button onclick="editComment('<%= comment._id %>', '<%= comment.rating %>', `<%= comment.content %>`)" class="btn btn-sm btn-warning mb-1">Edit</button>
                        <form action="/perfumes/<%= perfume._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" class="d-inline">
                          <button type="submit" onclick="return confirm('Are you sure you want to delete this review?')" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } %>
        </div>
      </div>
    </div>

    </div>

    <script>
      function editComment(commentId, rating, content) {
        const newRating = prompt('Enter rating (1-5):', rating);
        const newContent = prompt('Enter your review:', content);
        
        if (newRating && newContent) {
          // Create form and submit
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = `/perfumes/<%= perfume._id %>/comments/${commentId}?_method=PUT`;
          
          const ratingInput = document.createElement('input');
          ratingInput.type = 'hidden';
          ratingInput.name = 'rating';
          ratingInput.value = newRating;
          
          const contentInput = document.createElement('input');
          contentInput.type = 'hidden';
          contentInput.name = 'content';
          contentInput.value = newContent;
          
          form.appendChild(ratingInput);
          form.appendChild(contentInput);
          document.body.appendChild(form);
          form.submit();
        }
      }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz4YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  </body>
</html>
